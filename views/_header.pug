header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user    
        if user
            a.nav__el.nav__el--logout Log out
            a.nav__el(href='/me')
                -if(!user.photo)
                    img.nav__user-img(src=`https://miamivalleycap.org/wp-content/uploads/2017/01/placeholder-person.png` alt='user image')
                    span= user.name.split(' ')[0]
                -if(user.photo)
                    img.nav__user-img(src=`/img/users/${user.photo}` alt=`${user.photo}`)
                    span= user.name.split(' ')[0]
        else
            a.nav__el(href='/login') Login
            a.nav__el.nav__el--cta(href='/signup') Sign up